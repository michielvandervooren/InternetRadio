<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background" tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:weightSum="1">

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingRight="10dp"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/logo_view"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/app_title"
                android:text="@string/app_name"
                android:textColor="@color/blueDBT"
                android:textSize="24sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:text="@string/subtitle"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/blueDBT"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="@drawable/nl_flag_border">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/now_text"
                android:paddingTop="20dp"
                android:paddingLeft="15dp"
                android:paddingBottom="10dp"
                android:text="@string/now_playing"
                android:textColor="@color/whiteNLFlag"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:id="@+id/nowTextView"
                android:textColor="@color/whiteNLFlag"
                android:text="Boudewijn de Groot - Verdronken Vlinder"
                android:singleLine="true"
                android:ellipsize="end"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <ImageButton
                    android:id="@+id/play_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:backgroundTint="@color/whiteNLFlag"
                    android:tint="@color/blueDBT"
                    android:src="@android:drawable/ic_media_play"/>
                <ImageButton
                    android:id="@+id/pause_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"
                    android:backgroundTint="@color/whiteNLFlag"
                    android:tint="@color/blueDBT"
                    android:src="@android:drawable/ic_media_pause" />
            </LinearLayout>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/next_text"
                android:paddingTop="20dp"
                android:paddingLeft="15dp"
                android:paddingBottom="10dp"
                android:text="@string/next_track"
                android:textColor="@color/whiteNLFlag"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:id="@+id/nextTextView"
                android:text="Boudewijn de Groot - Verdronken Vlinder Verdronken Vlinder Verdronken Vlinder Verdronken Vlinder Verdronken Vlinder "
                android:textColor="@color/whiteNLFlag"
                android:singleLine="true"
                android:ellipsize="end"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/whiteNLFlag"
                android:text="@string/visit_website"
                android:textColor="@color/blueDBT"
                android:id="@+id/goto_website"/>
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>
