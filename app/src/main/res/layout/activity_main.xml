<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="Radio DBT" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleTextView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/play_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Now playing"
        android:id="@+id/nowTextView"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/titleTextView"
        android:layout_alignLeft="@+id/play_button"
        android:layout_alignStart="@+id/play_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next track"
        android:id="@+id/nextTextView"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/nowTextView"
        android:layout_alignLeft="@+id/nowTextView"
        android:layout_alignStart="@+id/nowTextView" />

</RelativeLayout>
